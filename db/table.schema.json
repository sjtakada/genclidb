{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TABLE JSON schema",
  "description": "Define Database Table structure",
  "type": "object",
  "properties": {
    "table": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\-]+$": {
          "type": "object",
          "properties": {
            "type": {
              "enum": ["parent", "dependent", "association"]
            },
            "has-one": {
              "type": "object",
              "patternProperties": {
                "^[a-z_A-Z0-9\-]+$": {
                  "type": ["object", "null"],
                  "properties": {
                    "through": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "has-dependent": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "has-association": {
              "type": "object",
              "patternProperties": {
                "^[a-z_A-Z0-9\-]+$": {
                  "type": ["object", "null"],
                  "properties": {
                    "through": {
                      "type": "string"
                    },
                    "as": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "belongs-to": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "belongs-to-polymorphic": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "order": {
              "type": "string"
            },
            "keys": {
              "type": "object",
              "patternProperties": {
                "^[a-z_A-Z0-9\-]+$": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": [
                        "string", "integer", "boolean", "ipv4", "ipv6", "enum"
                      ]
                    },
                    "range": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      },
                      "minItems": 2,
                      "maxItems": 2
                    },
                    "null": {
                      "type": "boolean"
                    },
                    "default": {
                    },
                    "values": {
                      "type": "array"
                    },
                    "desc": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "attributes": {
              "type": "object",
              "patternProperties" : {
                "^[a-z_A-Z0-9\-]+$": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": [
                        "string", "integer", "boolean", "ipv4", "ipv6", "enum"
                      ]
                    },
                    "range": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      },
                      "minItems": 2,
                      "maxItems": 2
                    },
                    "null": {
                      "type": "boolean"
                    },
                    "default": {
                    },
                    "values": {
                      "type": "array"
                    },
                    "desc": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
